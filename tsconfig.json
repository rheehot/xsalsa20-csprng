{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "es2017"],
    "allowJs": true,
    "skipLibCheck": true,
    "declaration": true,

    // Strict Typecheck
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    // Module
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "docs"],
  "typedocOptions": {
    "inputFiles": ["./src/index.nodejs.ts"],
    "excludeNotExported": true,
    "excludePrivate:": true,
    "mode": "file",
    "out": "docs"
  }
}
